# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Configuration
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/database?appName=Cluster0

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-app.vercel.app

# JWT Tokens (CHANGE THESE TO STRONG RANDOM STRINGS)
ACCESS_TOKEN_SECRET=your-super-secret-access-token-min-32-chars
ACCESS_TOKEN_EXPIRY=10m
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-min-32-chars
REFRESH_TOKEN_EXPIRY=7d

# Redis Configuration
UPSTASH_REDIS_URL=rediss://default:your-redis-url@host.upstash.io:6379